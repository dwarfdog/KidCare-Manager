{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
	{% if app.user %}
		{# Section tableau de bord rapide #}
		<section class="py-12 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h2 class="text-2xl font-semibold text-gray-900 mb-6">Mois en cours</h2>
				<div
					class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
					{# Carte heures ce mois #}
					<div class="bg-white overflow-hidden shadow rounded-lg">
						<div class="p-5">
							<div class="flex items-center">
								<div class="flex-shrink-0">
									<svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
									</svg>
								</div>
								<div class="ml-5 w-0 flex-1">
									<dl>
										<dt class="text-sm font-medium text-gray-500 truncate">
											Heures ce mois
										</dt>
										<dd class="flex items-baseline">
											<div class="text-2xl font-semibold text-gray-900">
												{% if actualMonth %}
													{{actualMonth.totalsHours}}h
												{% else %}
													0h
												{% endif %}
											</div>
										</dd>
									</dl>
								</div>
							</div>
						</div>
					</div>

					{# Prochain paiement #}
					<div class="bg-white overflow-hidden shadow rounded-lg">
						<div class="p-5">
							<div class="flex items-center">
								<div class="flex-shrink-0">
									<svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
									</svg>
								</div>
								<div class="ml-5 w-0 flex-1">
									<dl>
										<dt class="text-sm font-medium text-gray-500 truncate">
											Prochain paiement
										</dt>
										<dd class="flex items-baseline">
											<div class="text-2xl font-semibold text-gray-900">
												{% if actualMonth %}
													{{actualMonth.totalAmount}} €
												{% else %}
													0 €
												{% endif %}
											</div>
										</dd>
									</dl>
								</div>
							</div>
						</div>
					</div>

					{# Prochaine garde #}
					<div class="bg-white overflow-hidden shadow rounded-lg">
						<div class="p-5">
							<div class="flex items-center">
								<div class="flex-shrink-0">
									<svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
									</svg>
								</div>
								<div class="ml-5 w-0 flex-1">
									<dl>
										<dt class="text-sm font-medium text-gray-500 truncate">
											Prochaine garde
										</dt>
										<dd class="flex items-baseline">
											<div class="text-2xl font-semibold text-gray-900">
												{% if nextCare %}
													{{nextCare.date|date('d/m/Y')}} à {{nextCare.startTime|date('H:i')}}
												{% else %}
													-
												{% endif %}
											</div>
										</dd>
									</dl>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		{# Section des mois antérieurs #}
		<section class="py-12 bg-gray-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<h2 class="text-2xl font-semibold text-gray-900 mb-6">Historique des mois précédents</h2>
				<div class="bg-white shadow overflow-hidden sm:rounded-lg">
					<div class="overflow-x-auto">
						<table class="min-w-full divide-y divide-gray-200">
							<thead class="bg-gray-50">
								<tr>
									<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Période</th>
									<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Heures totales</th>
									<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Montant</th>
									<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
									<th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
								</tr>
							</thead>
							<tbody class="bg-white divide-y divide-gray-200">
								{% for payment in allMontlyPaiements %}
									<tr>
										<td class="px-6 py-4 whitespace-nowrap">
											<div class="text-sm font-medium text-gray-900">
												{{ payment.month|format_datetime(locale='fr', pattern="MMMM YYYY")|capitalize }}
											</div>
										</td>
										<td class="px-6 py-4 whitespace-nowrap">
											<div class="text-sm text-gray-900">{{ payment.totalsHours }}h</div>
										</td>
										<td class="px-6 py-4 whitespace-nowrap">
											<div class="text-sm text-gray-900">{{ payment.totalAmount }} €</div>
										</td>
										<td class="px-6 py-4 whitespace-nowrap">
											{% if payment.isPaid %}
												<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
													Payé
												</span>
											{% else %}
												<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
													En attente
												</span>
											{% endif %}
										</td>
										<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
											<a href="{# {{ path('app_monthly_payment_show', {'id': payment.id}) }} #}" class="text-indigo-600 hover:text-indigo-900 mr-4">
												Détails
											</a>
											{% if not payment.isPaid %}
												<a href="{# {{ path('app_monthly_payment_mark_as_paid', {'id': payment.id}) }} #}" class="text-green-600 hover:text-green-900">
													Marquer comme payé
												</a>
											{% endif %}
										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">
											Aucun historique de paiement disponible
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</section>
	{% endif %}
{% endblock %}

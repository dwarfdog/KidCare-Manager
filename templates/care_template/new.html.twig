{% extends 'base.html.twig' %}

{% block title %}Nouveau template de garde
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<div class="bg-white rounded-lg shadow p-6">
			{{ form_start(form, {'attr': {'id': 'care-template-form'}}) }}
			<div class="flex justify-between items-center mb-6">
				<h1 class="text-2xl font-bold text-gray-900">Nouveau template de garde</h1>
				<a href="{{ path('app_home') }}" class="bouton bouton-blue">
					<i class="fa-solid fa-chevron-left mr-2"></i>
					Retour
				</a>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
				{{ form_row(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
				{{ form_row(form.nanny, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
			</div>

			<div class="space-y-8" x-data="templateForm()">
				{% for day, label in {
                        'monday': 'Lundi',
                        'tuesday': 'Mardi',
                        'wednesday': 'Mercredi',
                        'thursday': 'Jeudi',
                        'friday': 'Vendredi'
                    } %}
					<div class="border rounded-lg p-4" x-data="daySchedule('{{ day }}')">
						<div class="flex justify-between items-center mb-4">
							<div class="flex items-center">
								<input type="checkbox" x-model="isActive" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500">
								<span class="ml-2 text-lg font-medium">{{ label }}</span>
							</div>
							<button type="button" x-show="isActive" @click="addSlot()" class="bouton bouton-blue text-sm">
								<i class="fa-solid fa-plus mr-2"></i>
								Ajouter un créneau
							</button>
						</div>

						<div x-show="isActive">
							<template x-for="(slot, index) in slots" :key="slot.id">
								<div class="grid grid-cols-1 md:grid-cols-4 gap-4 p-4 bg-gray-50 rounded-lg mb-4">
									<input type="hidden" :name="`weekSchedule[${day}][isActive]`" :value="isActive">
									<div>
										<label :for="`${day}_start_${slot.id}`" class="block text-sm font-medium text-gray-700">
											Heure de début
										</label>
										<input type="time" :id="`${day}_start_${slot.id}`" :name="`weekSchedule[${day}][slots][${index}][startTime]`" x-model="slot.startTime" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
									</div>
									<div>
										<label :for="`${day}_end_${slot.id}`" class="block text-sm font-medium text-gray-700">
											Heure de fin
										</label>
										<input type="time" :id="`${day}_end_${slot.id}`" :name="`weekSchedule[${day}][slots][${index}][endTime]`" x-model="slot.endTime" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
									</div>
									<div>
										<label :for="`${day}_meals_${slot.id}`" class="block text-sm font-medium text-gray-700">
											Nombre de repas
										</label>
										<input type="number" :id="`${day}_meals_${slot.id}`" :name="`weekSchedule[${day}][slots][${index}][mealsCount]`" x-model="slot.mealsCount" min="0" max="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
									</div>
									<div class="flex items-end">
										<button type="button" x-show="slots.length > 1" @click="removeSlot(index)" class="bouton bouton-red text-sm">
											<i class="fa-solid fa-trash mr-2"></i>
											Supprimer
										</button>
									</div>
								</div>
							</template>
						</div>
					</div>
				{% endfor %}
			</div>

			<div class="mt-8 flex justify-end">
				<button type="submit" class="bouton bouton-red">
					<i class="fa-regular fa-floppy-disk mr-2"></i>
					Créer le template
				</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		function templateForm() {
return {init() { // Initialisation globale si nécessaire
}}
}

function daySchedule(day) {
return {
day: day,
isActive: false,
slots: [
{
id: Date.now(),
startTime: '08:00',
endTime: '17:00',
mealsCount: 0
}
],
addSlot() {
this.slots.push({id: Date.now(), startTime: '08:00', endTime: '17:00', mealsCount: 0});
},
removeSlot(index) {
this.slots = this.slots.filter((_, i) => i !== index);
}
}
}
	</script>
{% endblock %}

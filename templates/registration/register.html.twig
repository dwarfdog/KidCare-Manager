{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-md w-full space-y-8">
			<div>
				<h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
					Créer un compte
				</h2>
			</div>

			{{ form_start(registrationForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
			{% if form_errors(registrationForm) %}
				<div class="rounded-md bg-red-50 p-4">
					<div class="flex">
						<div class="ml-3">
							<h3 class="text-sm font-medium text-red-800">
								{{ form_errors(registrationForm) }}
							</h3>
						</div>
					</div>
				</div>
			{% endif %}

			<div class="rounded-md shadow-sm space-y-4">
				<div>
					{{ form_label(registrationForm.username, 'Identifiant', {'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700 mb-2'
                    }}) }}
					{{ form_widget(registrationForm.username, {'attr': {
                        'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                        'placeholder': 'Votre identifiant'
                    }}) }}
					{{ form_errors(registrationForm.username, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
				</div>

				<div>
					{{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700 mb-2'
                    }}) }}
					{{ form_widget(registrationForm.plainPassword, {'attr': {
                        'class': 'appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                        'placeholder': 'Votre mot de passe'
                    }}) }}
					{{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
				</div>

				<div class="flex items-center">
					{{ form_widget(registrationForm.agreeTerms, {'attr': {
                        'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'
                    }}) }}
					{{ form_label(registrationForm.agreeTerms, "J'accepte les conditions d'utilisation", {'label_attr': {
                        'class': 'ml-2 block text-sm text-gray-900'
                    }}) }}
					{{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
				</div>
			</div>

			<div>
				<button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
					S'inscrire
				</button>
			</div>

			<div class="text-center">
				<a href="{{ path('app_login') }}" class="font-medium text-indigo-600 hover:text-indigo-500">
					Déjà un compte ? Se connecter
				</a>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
